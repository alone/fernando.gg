{
  "name": "fernandogg",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "@trpc/server": "^11.7.2",
      "better-auth": "^1.4.18",
      "@trpc/client": "^11.7.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @fernando/db db:push",
    "db:studio": "turbo -F @fernando/db db:studio",
    "db:generate": "turbo -F @fernando/db db:generate",
    "db:migrate": "turbo -F @fernando/db db:migrate",
    "db:start": "turbo -F @fernando/db db:start",
    "db:watch": "turbo -F @fernando/db db:watch",
    "db:stop": "turbo -F @fernando/db db:stop",
    "db:down": "turbo -F @fernando/db db:down",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "prepare": "husky"
  },
  "dependencies": {
    "@fernando/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@fernando/config": "workspace:*",
    "@types/bun": "^1.3.8",
    "husky": "latest",
    "lint-staged": "latest",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "7.1.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
