{
  "name": "@fernando/db",
  "type": "module",
  "exports": {
    ".": {
      "default": "./src/index.ts"
    },
    "./schema": {
      "default": "./src/schema/index.ts"
    },
    "./schema/*": {
      "default": "./src/schema/*.ts"
    },
    "./*": {
      "default": "./src/*.ts"
    }
  },
  "scripts": {
    "db:push": "bunx --bun drizzle-kit push",
    "db:generate": "bunx --bun drizzle-kit generate",
    "db:studio": "bunx --bun drizzle-kit studio",
    "db:migrate": "bunx --bun drizzle-kit migrate",
    "db:start": "docker compose up -d",
    "db:watch": "docker compose up",
    "db:stop": "docker compose stop",
    "db:down": "docker compose down"
  },
  "dependencies": {
    "@fernando/env": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@fernando/config": "workspace:*",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "pg": "^8.18.0",
    "typescript": "catalog:"
  }
}
