{
  "name": "server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "cd ../.. && bun --env-file=apps/server/.env run --hot apps/server/src/index.ts",
    "seed": "bun run src/seed.ts",
    "start": "bun run dist/index.mjs"
  },
  "dependencies": {
    "@fernando/api": "workspace:*",
    "@fernando/auth": "workspace:*",
    "@fernando/db": "workspace:*",
    "@fernando/env": "workspace:*",
    "@trpc/server": "catalog:",
    "better-auth": "catalog:",
    "drizzle-orm": "^0.45.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@fernando/config": "workspace:*",
    "@types/bun": "catalog:",
    "tsdown": "^0.16.5",
    "typescript": "catalog:"
  }
}
